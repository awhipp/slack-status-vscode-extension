{
  "name": "slack-status",
  "displayName": "slack-status",
  "description": "Integrates with slack to provide a live status of what is being worked on and historical statistics",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
        "type": "object",
        "title": "Slack Status",
        "properties": {
            "slack-status.slackToken": {
                "type": "string",
                "default": "",
                "description": "The slack token to use for the slack api. You can get this from https://api.slack.com/apps/"
            },
            "slack-status.enableCharacterCount": {
                "type": "boolean",
                "default": true,
                "description": "Whether to enable the character count"
            },
            "slack-status.enableLineCount": {
                "type": "boolean",
                "default": true,
                "description": "Whether to enable the line count"
            }
        }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "@slack/web-api": "^6.9.0"
  }
}
